</div>

<script type="text/javascript">
    $(function () {
        $("#add-new").click(function () {
            var index = -1;
            $.get("@Url.Action("Create")", null, function (data) {
                if (data != null || data != "") {
                    //页面层
                    index = layer.open({
                        type: 1,
                        title: "新增部门",
                        skin: 'layui-layer-rim', //加上边框
                        area: ['600px', '400px'], //宽高
                        content: data,
                        btn: ['提交', '取消'] //只是为了演示
                        , yes: function () {
                            var data = $("form").serialize();
                            $.post("@Url.Action("Create")", data, function (obj) {
                                debugger;
                                if (obj.result.statu == "ok") {
                                    // layer.msg('保存成功！');
                                    // layer.close(index);
                                    layer.msg('保存成功！', function () {
                                        location.reload();
                                    });

                                } else {
                                    layer.msg('保存失败，请检查数据！');
                                }
                            });
                        }
                    });
                } else {
                    layer.close(index);
                }

                //$("#add-new-page").html(data);
            });
        });
        $(document).on('click', "#add-Role", function () {
            $("#rId").val(0);
            $("#rName").val("");
            $("#rRemark").val("");
        });
    })

    function DelDepa(id) {
        layer.confirm('是否删除', { icon: 3, title: '提示' }, function (index) {
            $.get("@Url.Action("Delete")", { Id: id }, function (obj) {
                debugger;
                if (obj.result.statu == "ok") {
                    layer.msg('删除成功！', { time: 500 }, function () {
                        location.reload();
                    });
                } else {
                    layer.msg(obj.result.Msg);
                }
            });
        });


    }

    var index = -1;
    function Edit(id) {
        debugger;
        //  var index = -1;
        $.get("@Url.Action("Edit")", { id: id }, function (data) {
            if (data != null || data != "") {
                //页面层
                index = layer.open({
                    type: 1,
                    title: "修改部门",
                    skin: 'layui-layer-rim', //加上边框
                    area: ['600px', '400px'], //宽高
                    content: data,
                    btn: ['提交', '取消'] //只是为了演示
                    , yes: function () {
                        var data = $("form").serialize();
                        $.post("@Url.Action("Edit")", data, function (obj) {
                            debugger;
                            if (obj.result.statu == "ok") {
                                // layer.close(index);
                                layer.msg('保存成功！', { time: 500 }, function () {
                                    location.reload();
                                });

                            } else {
                                layer.msg('保存失败，请检查数据！');
                            }
                        });
                    }
                });
            } else {
                layer.close(index);
            }
        });
    }

    function AddRole(id) {
        $.get("@Url.Action("RoleCreate")", { Id: id }, function (data) {
            if (data != null || data != "") {
                //页面层
                index = layer.open({
                    type: 1,
                    title: "编辑角色",
                    skin: 'layui-layer-rim', //加上边框
                    area: ['600px', '600px'], //宽高
                    content: data,
                    btn: ['编辑', '取消'], //只是为了演示
                    yes: function () {
                        var data = $("form").serialize();
                        $.post("@Url.Action("RoleCreate")", data, function (obj) {
                            if (obj.result.statu == "ok") {
                                layer.msg('保存成功！');
                                layer.close(index);

                            } else {
                                layer.msg('保存失败，请检查数据！');
                            }
                        });
                    }
                });
            } else {
                layer.close(index);
            }

            //$("#add-new-page").html(data);
        });
    }
    function DelRole(id) {
        layer.confirm('是否删除', { icon: 3, title: '提示' }, function (index) {
            $.get("@Url.Action("RoleDel")", { Id: id }, function (data) {
                if (data.result.statu == "ok") {
                    layer.msg("删除成功！");
                    layer.close(index);
                } else {
                    layer.msg(data.Msg);
                }
            });
        });

    }
    function EditRole(id) {
        var ras = $("input[type=radio][name=rIsShow]");
        var rad = $("input[type=radio][name=rIsDel]");
        $.get("@Url.Action("RoleEdit")", { Id: id }, function (obj) {
            if (obj.result.statu == "ok") {
                $("#rId").val(id);
                $("#rName").val(obj.result.data.rName);
                $("#rRemark").val(obj.result.data.rRemark);
                ras.each(function () {
                    if ($(this).val() == "" + obj.result.data.rIsShow + "") {
                        $(this).prop("checked", true);
                    } else {
                        $(this).prop("checked", false);
                    }
                })
                rad.each(function () {

                    if ($(this).val() == "" + obj.result.data.rIsDel + "") {
                        $(this).prop("checked", true);
                    } else {
                        $(this).prop("checked", false);
                    }
                })
            } else {
                alert(obj.result.statu);
            }
        });
    }
</script>