<script type="text/javascript">
    $(function () {
        $("#add-Role").click(function () {
            var index = -1;
            $.get("@Url.Action("Create")", null, function (data) {
                if (data != null || data != "") {
                    //页面层
                    index = layer.open({
                        type: 1,
                        title: "新增角色",
                        skin: 'layui-layer-rim', //加上边框
                        area: ['600px', '400px'], //宽高
                        content: data,
                        btn: ['提交', '取消'] //只是为了演示
                        , yes: function () {
                            var data = $("form").serialize();
                            $.post("@Url.Action("Create")", data, function (obj) {
                                debugger;
                                if (obj.result.statu == "ok") {
                                    layer.msg('保存成功！');
                                    layer.close(index);
                                }
                            });
                        }
                    });
                } else {
                    layer.close(index);
                }

            });
        });
    })

    var index = -1;
    function Edit(id) {
        debugger;
        //  var index = -1;
        $.get("@Url.Action("Edit")", { id: id }, function (data) {
            if (data != null || data != "") {
                //页面层
                index = layer.open({
                    type: 1,
                    title: "分配权限",
                    skin: 'layui-layer-rim', //加上边框
                    area: ['600px', '400px'], //宽高
                    content: data,
                    btn: ['提交', '取消'] //只是为了演示
                    , yes: function () {
                        var data = $("form").serialize();
                        $.post("@Url.Action("Edit")", data, function (obj) {
                            debugger;
                            if (obj.result.statu == "ok") {
                                // layer.close(index);
                                layer.msg('保存成功！', { time: 500 }, function () {
                                    location.reload();
                                });

                            } else {
                                layer.msg('保存失败，请检查数据！');
                            }
                        });
                    }
                });
            } else {
                layer.close(index);
            }
        });
    }


    function Del(id) {
        layer.confirm('是否删除', { icon: 3, title: '提示' }, function (index) {
            $.get("@Url.Action("Delete")", { Id: id }, function (data) {
                if (data.result.statu == "ok") {
                    layer.msg('删除成功！', { time: 500 }, function () {
                        location.reload();
                    });
                } else {
                    layer.msg(data.Msg);
                }
            });
        });

    }

    var index = -1;
    function AddPer(id) {
        debugger;
        //  var index = -1;
        $.get("@Url.Action("PermissonList")", { id: id }, function (data) {
            if (data != null || data != "") {
                //页面层
                index = layer.open({
                    type: 1,
                    title: "修改",
                    skin: 'layui-layer-rim', //加上边框
                    area: ['800px', '400px'], //宽高
                    content: data,
                    btn: ['提交', '取消'] //只是为了演示
                    , yes: function () {
                        var data = $("form").serialize();
                        debugger;
                        $.post("@Url.Action("PermissonList")", data, function (obj) {
                            debugger;
                            if (obj.result.statu == "ok") {
                                // layer.close(index);
                                layer.msg('保存成功！', { time: 500 }, function () {
                                    location.reload();
                                });

                            } else {
                                layer.msg('保存失败，请检查数据！');
                            }
                        });
                    }
                });
            } else {
                layer.close(index);
            }
        });
    }

</script>
