@using OA.PermissionsDto
@model List<PermissionDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    td a {
        color: #333;
        margin: 0 2px;
        font-size: 10px;
    }

        td a:hover {
            color: #dd4b39;
        }
</style>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">权限操作</h3>

        <div class="box-tools">
            <button id="add-new" type="button" class="btn btn-default pull-left" style="margin-right:5px;"><i class="fa fa-plus"></i> 新增</button>

            @*<div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>*@
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>显示</th>
                    <th>权限名</th>
                    <th>区域名</th>
                    <th>控制名</th>
                    <th>方法名</th>
                    <th>请求方式</th>
                    <th>操作类型</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.pid</td>
                        <td>@item.pIsShow</td>
                        <td>@item.pName</td>
                        <td>@item.pAreaName</td>
                        <td>@item.pControllerName</td>
                        <td>@item.pActionName</td>
                        <td>@((Unity.OaEnums.ChartDataType)item.pFormMethod)</td>
                        <td>@item.pOperationType</td>
                        <td>
                            <div class="tools">
                                <a href="javaScript:(0)" onclick="Edit(@item.pid)"><i class="fa fa-edit"></i> 编辑</a>
                                <a href="javaScript:(0)" onclick="Del(@item.pid)"><i class="fa fa-trash-o"></i> 删除</a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    @*<div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>*@
</div>

<script type="text/javascript">
    $(function () {
        $("#add-new").click(function () {
            var index = -1;
            $.get("@Url.Action("Create")", null, function (data) {
                if (data != null || data != "") {
                    //页面层
                    index = layer.open({
                        type: 1,
                        title: "新增",
                        skin: 'layui-layer-rim', //加上边框
                        area: ['600px', '400px'], //宽高
                        content: data,
                        btn: ['提交', '取消'] //只是为了演示
                        , yes: function () {
                            var data = $("form").serialize();
                            $.post("@Url.Action("Create")", data, function (obj) {
                                debugger;
                                if (obj.result.statu == "ok") {
                                    // layer.msg('保存成功！');
                                    // layer.close(index);
                                    layer.msg('保存成功！', function () {
                                        location.reload();
                                    });

                                } else {
                                    layer.msg('保存失败，请检查数据！');
                                }
                            });
                        }
                    });
                } else {
                    layer.close(index);
                }

                //$("#add-new-page").html(data);
            });
        });
        $(document).on('click', "#add-Role", function () {
            $("#rId").val(0);
            $("#rName").val("");
            $("#rRemark").val("");
        });
    })
    var index = -1;
    function Edit(id) {
        debugger;
        //  var index = -1;
        $.get("@Url.Action("Edit")", { id: id }, function (data) {
            if (data != null || data != "") {
                //页面层
                index = layer.open({
                    type: 1,
                    title: "修改",
                    skin: 'layui-layer-rim', //加上边框
                    area: ['600px', '400px'], //宽高
                    content: data,
                    btn: ['提交', '取消'] //只是为了演示
                    , yes: function () {
                        var data = $("form").serialize();
                        $.post("@Url.Action("Edit")", data, function (obj) {
                            debugger;
                            if (obj.result.statu == "ok") {
                                // layer.close(index);
                                layer.msg('保存成功！', { time: 500 }, function () {
                                    location.reload();
                                });

                            } else {
                                layer.msg('保存失败，请检查数据！');
                            }
                        });
                    }
                });
            } else {
                layer.close(index);
            }
        });
    }


    function Del(id) {
        $.get("@Url.Action("Delete")", { Id: id }, function (data) {
            if (data.result.statu == "ok") {
                layer.msg("删除成功！");
                layer.close(index);
            } else {
                layer.msg(data.Msg);
            }
        });

    }

</script>

